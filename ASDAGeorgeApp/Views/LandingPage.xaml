<UserControl x:Class="ASDAGeorgeApp.Views.LandingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:k="http://schemas.microsoft.com/kinect/2013"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASDAGeorgeApp" 
             xmlns:uc="clr-namespace:ASDAGeorgeApp.Views.SubViews"
             xmlns:model="clr-namespace:ASDAGeorgeApp.Models"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid model:KinectTextButton.Click="Grid_Click" Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <model:KinectTextButton Grid.Row="0">
                <Image Grid.Column="1" Height="80px" Margin="0,15,0,0" Source="..\image\logo.png"/>
            </model:KinectTextButton>
        </Grid>
    </Grid>
</UserControl>
