<UserControl x:Class="ASDAGeorgeApp.ProductPage"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
            mc:Ignorable="d" 
            d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <!-- TOP LEVEL GRIDS -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>


        <!-- LEFT PANEL -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!-- GEORGE LOGO -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" HorizontalAlignment="Right">
                        <Image Height="30px" Source="..\icons\align14Yellow.png"></Image>
                    </Grid>
                    <Grid Grid.Column="1" Margin="10,10,0,0">
                        <Image Source="..\image\logo.png"></Image>
                    </Grid>
                </Grid>

                <!-- BACK TO DRESSES -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                        
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" HorizontalAlignment="Right" Margin="0,17,0,0">
                      
                        <!-- LEFT CARET -->
                        <TextBlock FontFamily="webdings" FontSize="30" Foreground="White" Text="3" />
                    </Grid>
                    <Grid Grid.Column="1" Margin="10,10,0,0">
                        <TextBlock MouseDown="TextBlock_MouseDown" FontSize="30" Foreground="White">
                            Back to dresses
                        </TextBlock>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" HorizontalAlignment="Left">
                <TextBox FontSize="30" Text="
                         Give your floral wardrobe &#x0a; 
                         a fresh update with this
                         something2">
                </TextBox>
            </Grid>
        </Grid>

        <!-- RIGHT PANEL -->
        <Grid Grid.Column="2" Background="Gray" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- PRODUCT TITLE -->
            <Grid Grid.Row="1" HorizontalAlignment="Center">
                <TextBlock FontSize="30" Foreground="Black">
                     Floral bodycon dress
                </TextBlock>
            </Grid>
            
            <!-- PRODUCT PRICE -->
            <Grid Grid.Row="2" HorizontalAlignment="Center">
                <TextBlock Foreground="Black" FontSize="30">
                    £19.00
                </TextBlock>
            </Grid>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" Background="LightGray">
                    <TextBlock VerticalAlignment="Center" Foreground="white" FontSize="30" HorizontalAlignment="Center">
                    BLACK
                    </TextBlock>
                </Grid>
            </Grid>
            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" Background="LightGray">
                    <TextBlock VerticalAlignment="Center" Foreground="white" FontSize="30" HorizontalAlignment="Center">
                    Size
                    </TextBlock>
                </Grid>
            </Grid>
            <Grid Grid.Row="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" Background="LightGray">
                    <TextBlock VerticalAlignment="Center" Foreground="white" FontSize="30" HorizontalAlignment="Center">
                    QUANTITY
                    </TextBlock>
                </Grid>
            </Grid>

            <Grid Grid.Row="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" Background="green">
                    <TextBlock VerticalAlignment="Center" Foreground="white" FontSize="30" HorizontalAlignment="Center">
                    ADD TO BASKET
                    </TextBlock>
                </Grid>
            </Grid>

            <Grid Grid.Row="11">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <TextBlock Foreground="white" FontSize="20" HorizontalAlignment="Center">
                   Or add to wishlist
                    </TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
