            </Grid>
            <Grid Grid.Row="8">
                <TextBlock Foreground="white" FontSize="40" TextAlignment="Center" VerticalAlignment="Center">
                    Trends
                </TextBlock>
            </Grid>
            <Grid Grid.Row="10">
                <TextBlock Foreground="white" FontSize="40" TextAlignment="Center" VerticalAlignment="Center">
                    Hi Jessica
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</Window>
