<Window x:Class="ASDAGeorgeApp.MainPageMock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASDAGeorgeApp"
        Title="MainPageMock" Height="800" Width="1400">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                    <k:KinectScrollViewer   VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock Foreground="White" FontSize="30">Shop by product</TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <k:KinectScrollViewer   VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" Margin="10,0,-9.6,0.6" >
                                <WrapPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                </WrapPanel>
                            </k:KinectScrollViewer>
                        </Grid>
                        <Grid Grid.Row="2">
                            <TextBlock Foreground="White" FontSize="30">Footwear</TextBlock>
                        </Grid>
                        <Grid Grid.Row="3">
                            <k:KinectScrollViewer   VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" Margin="10,0,-9.6,0.6" >
                                <WrapPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                </WrapPanel>
                            </k:KinectScrollViewer>
                        </Grid>
                        <Grid Grid.Row="4">
                            <TextBlock Foreground="White" FontSize="30">Collections</TextBlock>
                        </Grid>
                        <Grid Grid.Row="5">
                            <k:KinectScrollViewer   VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" Margin="10,0,-9.6,0.6" >
                                <WrapPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                    <k:KinectTileButton Label="Something" />
                                </WrapPanel>
                            </k:KinectScrollViewer>
                        </Grid>
                    </Grid> 
                </k:KinectScrollViewer>
            </Grid>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Foreground="white" FontSize="40" TextAlignment="Center" VerticalAlignment="Center">
                    George
                </TextBlock>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock Foreground="white" FontSize="40" TextAlignment="Center" VerticalAlignment="Center">
                    Search
                </TextBlock>
            </Grid>
            <Grid Grid.Row="2">
                <TextBlock Foreground="white" FontSize="40" TextAlignment="Center" VerticalAlignment="Center">
                    Garden &amp; Home
                </TextBlock>
            </Grid>
            <Grid Grid.Row="3">
                <TextBlock Foreground="white" FontSize="40" TextAlignment="Center" VerticalAlignment="Center">
                    Womens
                </TextBlock>
            </Grid>
            <Grid Grid.Row="4">
                <TextBlock Foreground="white" FontSize="40" TextAlignment="Center" VerticalAlignment="Center">
                    Mens
                </TextBlock>
            </Grid>
            <Grid Grid.Row="5">
                <TextBlock Foreground="white" FontSize="40" TextAlignment="Center" VerticalAlignment="Center">
